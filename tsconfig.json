{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext", "esnext.asynciterable"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "strict": true,
    "target": "ES2018",
    "declaration": true,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
